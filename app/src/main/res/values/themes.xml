<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Chip22" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="dropdownTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/dropdown_border_color</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="endIconTint">@color/dropdown_border_color</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="backgroundColor">#fbfbfb</item>
        <item name="hintTextColor">@color/deep_koamaru</item>
    </style>

    <style name="autoCompleteTextViewTheme">
        <item name="android:layout_weight">1</item>
        <item name="android:inputType">none</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:drawableStart">@drawable/dropdown_icon_bg</item>
        <item name="android:textColor">@color/dropdown_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/deep_koamaru</item>
        <item name="android:textColorHighlight">@color/deep_koamaru</item>
    </style>

</resources>